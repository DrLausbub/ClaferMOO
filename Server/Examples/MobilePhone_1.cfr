// Example of a Mobile Phone with a single quality attribute (cost) and a single optimization objective (minimize)

abstract Feature 
    cost -> integer  //# QUALITY_ATTRIBUTE
    [ cost >= 0 ]

abstract MobilePhone
    hardware
        [ cost = 0 ]
        screen
            [ cost = 0 ]
            xor material
                [ cost = 0 ]
                oled : Feature
                    [ cost = 10 ]
                amoled : Feature
                    [ cost = 14 ]
                lcd : Feature
                    [ cost = 8 ]
        keyboard  : Feature ?
            [ cost = 5 ]
            keyboardLight : Feature ? 
                [ cost = 2 ]
        cpu : Feature
            [ cost = 12 ]
        extra_cpu : Feature ?
            [ cost = 10 ]
        or location ?
            [ cost = 0 ]
            gps : Feature
                [ cost = 6 ]
            wifitriangulation : Feature
                [ cost = 1 ]
    software
        [ cost = 0 ]
        browser ?
            [ cost = 0 ]
            [ extra_cpu ]
        mediaplayer ?
            [ cost = 0 ]
    total_cost -> integer = sum Feature.cost

aPhone : MobilePhone

<< min aPhone.total_cost >>